<h2>wishlist</h2>

<section class="all-hikes">
    <% for (let hike of hikes) { %>

        <div class="ui-card">
            <img src=<%=hike.image_url %> alt="a photo of <%= hike.name %>">
                <section class="content">
                    <h2>
                        <a href="/hikes/<%= hike.id %>">
                            <%= hike.name %>
                        </a>

                    </h2>
                    <h4>
                        <%= hike.location %>
                    </h4>
                </section>

                <footer class="content">
                    <span>
                        <%= hike.length %> km
                    </span>
                    <span>
                        <%= hike.days %> days
                    </span>
                </footer>
                <footer class="content">
                    <% if (hike.user_id === userId) { %>
                        <span><a href="/hikes/<%= hike.id %>/edit">edit</a></span>
                        <% } %>

                            <span>
                                <form action="/likes/<%= hike.id %>" method="post">
                                    <input type="hidden" value="delete" name="_method">
                                    <button>remove from wishlist</button>
                            </span>

                </footer>

        </div>
        <% } %>