<% if (!userId) { %>
    <a href="/hikes/new">Share a hike</a>
<% } %>

<h1>let's explore</h1>
<% for (let hike of hikes) { %>
    <div class="ui-card">
        <img src=<%= hike.image_url %> alt="a photo of <%= hike.name %>">
        <section class="content">
            <h2>
                <a href="/hikes/<%= hike.id %>">
                    <%= hike.name %>
                
                </a>
            </h2>
            <h4><%= hike.location %></h4>
        </section>
        <footer class="content">
            <span><%= hike.length %> km</span>
            <span><%= hike.days %> days</span>

        </footer>
    </div>

<% } %>
</section>